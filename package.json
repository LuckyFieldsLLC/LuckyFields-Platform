{
  "name": "@luckyfields/platform",
  "version": "0.1.0",
  "description": "LuckyFields.LLCの全アプリ共通基盤。Netlify Blobs、Functions、API、UIなどをモジュール化し、共通ユーティリティとして提供するTypeScriptベースのPlatform。",
  "type": "module",
  "main": "index.js",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "test": "echo \"ok\" && exit 0",
    "dev": "npm run build && npm run dev --workspaces --if-present",
    "health:scan": "npm -w @luckyfields/repo-health run scan -- --cwd .",
    "health:scan:json": "npm -w @luckyfields/repo-health run scan -- --json --cwd .",
    "health:scan:report": "npm -w @luckyfields/repo-health run scan -- --json --report --cwd .",
    "dev:local": "node ./dev/local-server.js",
    "health:dashboard": "node ./scripts/generate-health-index.mjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LuckyFieldsLLC/LuckyFields-Platform.git"
  },
  "keywords": [
    "netlify",
    "blobs",
    "functions",
    "typescript",
    "platform"
  ],
  "author": "LuckyFields.LLC",
  "license": "MIT",
  "devDependencies": {
    "@netlify/plugin-nextjs": "^5.0.0",
    "@types/node": "^22.0.0",
    "typescript": "^5.9.0"
  },
  "dependencies": {
    "@luckyfields/env-core": "workspace:*",
    "@netlify/blobs": "^10.1.0",
    "@netlify/functions": "^2.5.0",
    "rss-parser": "^3.13.0"
  },
  "bugs": {
    "url": "https://github.com/LuckyFieldsLLC/LuckyFields-Platform/issues"
  },
  "homepage": "https://github.com/LuckyFieldsLLC/LuckyFields-Platform#readme"
}